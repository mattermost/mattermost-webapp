{
    "name": "@mattermost/compass-ui",
    "version": "0.0.1",
    "description": "components aligning to the compass design system",
    "homepage": "https://github.com/mattermost/compass-ui#readme",
    "author": "Mattermost",
    "license": "MIT",
    "scripts": {
        "build-storybook": "build-storybook",
        "build": "node -v && rimraf ./lib && npm run build:compile && npm run build:copy-files",
        "build:compile": "tsc --extendedDiagnostics -p \"./tsconfig.build.json\"",
        "build:copy-files": "node ./scripts/copy-files.js",
        "pack": "node ./scripts/pack.js",
        "lint": "eslint ./src",
        "lint:fix": "eslint --fix --cache ./src",
        "nuke": "rm -rf node_modules package-lock.json",
        "storybook": "start-storybook -s ./ -p 6006",
        "gc": "node ./scripts/generate-component.js"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/mattermost/compass-components.git"
    },
    "bugs": {
        "url": "https://github.com/mattermost/compass-components/issues"
    },
    "engines": {
        "node": ">=14.0.0"
    },
    "files": [
        "lib"
    ],
    "exports": {
        "./*": "./lib/*/*.js"
    },
    "publishConfig": {
        "access": "public"
    },
    "dependencies": {
        "@mattermost/compass-icons": "^0.1.19",
        "@mui/material": "5.10.6",
        "@mui/private-theming": "5.10.6",
        "clsx": "^1.1.1",
        "color-blend": "^3.0.1",
        "csstype": "^3.0.8",
        "lodash.kebabcase": "^4.1.1",
        "lodash.random": "^3.2.0",
        "lodash.upperfirst": "^4.3.1",
        "react": "17.0.2",
        "react-dom": "17.0.2"
    },
    "peerDependencies": {
        "react": "17.0.2",
        "react-dom": "17.0.2"
    },
    "devDependencies": {
        "@babel/core": "^7.13.8",
        "@etchteam/storybook-addon-status": "^4.0.0",
        "@storybook/addon-a11y": "^6.3.12",
        "@storybook/addon-actions": "^6.3.12",
        "@storybook/addon-docs": "^6.3.12",
        "@storybook/addon-essentials": "^6.3.12",
        "@storybook/addon-links": "^6.3.12",
        "@storybook/addon-viewport": "^6.3.12",
        "@storybook/react": "^6.3.12",
        "@types/lodash.kebabcase": "^4.1.6",
        "@types/lodash.lowerfirst": "^4.3.6",
        "@types/lodash.random": "^3.2.6",
        "@types/lodash.snakecase": "^4.1.6",
        "@types/lodash.toupper": "^4.1.6",
        "@types/lodash.upperfirst": "^4.3.6",
        "@types/node": "^12.0.0",
        "@types/react": "^17.0.9",
        "@types/react-dom": "^17.0.0",
        "@types/react-transition-group": "^4.4.1",
        "@typescript-eslint/eslint-plugin": "^4.16.1",
        "@typescript-eslint/parser": "^4.16.1",
        "babel-loader": "^8.2.2",
        "eslint": "^7.21.0",
        "eslint-config-prettier": "^8.1.0",
        "eslint-plugin-array-func": "^3.1.7",
        "eslint-plugin-eslint-comments": "^3.2.0",
        "eslint-plugin-ext": "^0.1.0",
        "eslint-plugin-implicit-dependencies": "^1.0.4",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-json": "^2.1.2",
        "eslint-plugin-mdx": "^1.9.0",
        "eslint-plugin-no-constructor-bind": "^2.0.4",
        "eslint-plugin-no-use-extend-native": "^0.5.0",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-optimize-regex": "^1.2.0",
        "eslint-plugin-prettier": "^3.3.1",
        "eslint-plugin-promise": "^4.3.1",
        "eslint-plugin-react-hooks": "^4.2.0",
        "eslint-plugin-regexp": "^0.2.2",
        "eslint-plugin-security": "^1.4.0",
        "eslint-plugin-unicorn": "^28.0.2",
        "fs-extra": "^9.1.0",
        "glob": "^7.1.6",
        "husky": "=4",
        "lint-staged": ">=10",
        "lodash.lowerfirst": "^4.3.1",
        "lodash.snakecase": "^4.1.1",
        "lodash.toupper": "^4.1.2",
        "prettier": "^2.2.1",
        "prompts": "^2.4.1",
        "react-docgen-typescript": "^2.0.0",
        "storybook-addon-designs": "^6.2.1",
        "storybook-addon-themes": "^6.1.0",
        "tsc-files": "^1.1.3",
        "typescript": "^4.3.4"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{ts,tsx}": [
            "tsc-files --p tsconfig.json"
        ],
        "*.{js,jsx,ts,tsx,md,mdx}": [
            "eslint --cache --fix ./src",
            "prettier --write"
        ]
    }
}
