    "devDependencies": {
        "@types/uuid": "9.0.0",
        "@typescript-eslint/eslint-plugin": "5.51.0",
        "@typescript-eslint/parser": "5.51.0",
        "eslint": "8.34.0",
        "prettier": "2.8.4",
        "typescript": "4.9.5"
