{
    "compilerOptions": {
        "esModuleInterop": true,
        "strict": true,
        "strictNullChecks": true,
        "skipLibCheck": true,
        "noEmit": true,
        "baseUrl": ".",
        "paths": {
            "@mattermost/client/*": ["../../packages/client/src/*"],
            "@mattermost/types/*": ["../../packages/types/src/*"],
            "@e2e-support/*": ["support/*"],
            "@e2e-test.config": ["test.config.ts"]
        }
    },
    "include": ["./**/*"],
    "exclude": ["node_modules", "../../node_modules", "!node_modules/@types", "!../../node_modules/@types"]
}
