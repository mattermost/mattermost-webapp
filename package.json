    "react-contextmenu": "2.10.0",
    "react-custom-scrollbars": "4.2.1",
    "react-day-picker": "7.2.4",
    "react-dom": "16.7.0",
    "react-intl": "2.8.0",
    "react-redux": "5.1.1",
    "react-router-dom": "4.3.1",
    "react-select": "2.3.0",
    "rebound": "0.1.0",
    "redux": "4.0.1",
    "redux-batched-actions": "0.4.1",
    "redux-persist": "4.10.2",
    "redux-persist-transform-filter": "0.0.18",
    "reselect": "4.0.0",
    "superagent": "3.8.3",
    "url-search-params-polyfill": "5.0.0",
    "whatwg-fetch": "3.0.0",
    "xregexp": "4.2.4",
    "zen-observable": "0.8.13"
  },
  "devDependencies": {
    "@babel/cli": "7.2.3",
    "@babel/core": "7.2.2",
    "@babel/plugin-proposal-class-properties": "7.3.0",
    "@babel/plugin-syntax-dynamic-import": "7.2.0",
    "@babel/preset-env": "7.3.1",
    "@babel/preset-react": "7.0.0",
    "@babel/runtime": "7.3.1",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "10.0.1",
    "babel-jest": "23.6.0",
    "babel-loader": "8.0.5",
    "bundle-loader": "0.5.6",
    "clone": "2.1.2",
    "copy-webpack-plugin": "4.6.0",
    "cross-env": "5.2.0",
    "css-loader": "2.1.0",
    "cypress": "3.1.4",
    "enzyme": "3.8.0",
    "enzyme-adapter-react-16": "1.7.1",
    "enzyme-to-json": "3.3.5",
    "eslint": "5.12.1",
    "eslint-config-mattermost": "github:mattermost/eslint-config-mattermost",
    "eslint-import-resolver-webpack": "0.11.0",
    "eslint-plugin-cypress": "2.2.0",
    "eslint-plugin-header": "2.0.0",
    "eslint-plugin-import": "2.15.0",
    "eslint-plugin-react": "7.12.4",
    "exports-loader": "0.7.0",
    "file-loader": "3.0.1",
    "html-loader": "0.5.5",
    "html-webpack-plugin": "3.2.0",
    "identity-obj-proxy": "3.0.0",
    "image-webpack-loader": "4.6.0",
    "imports-loader": "0.8.0",
    "jest": "23.6.0",
    "jest-canvas-mock": "1.1.0",
    "jest-cli": "23.6.0",
    "jest-junit": "6.1.0",
    "jquery-deferred": "0.3.1",
    "mini-css-extract-plugin": "0.5.0",
    "node-sass": "4.11.0",
    "react-router-enzyme-context": "^1.2.0",
    "redux-mock-store": "1.5.3",
    "redux-persist-node-storage": "2.0.0",
    "remote-redux-devtools": "0.5.16",
    "sass-loader": "7.1.0",
    "style-loader": "0.23.1",
    "webpack": "4.28.4",
    "webpack-cli": "3.2.1",
    "webpack-node-externals": "1.7.2",
    "webpack-pwa-manifest": "4.0.0",
    "yup": "0.26.10"
  },
  "jest": {
    "snapshotSerializers": [
      "<rootDir>/node_modules/enzyme-to-json/serializer"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/non_npm_dependencies/"
    ],
    "clearMocks": true,
    "collectCoverageFrom": [
      "actions/**/*.{js,jsx}",
      "client/**/*.{js,jsx}",
      "components/**/*.jsx",
      "plugins/**/*.{js,jsx}",
      "reducers/**/*.{js,jsx}",
      "routes/**/*.{js,jsx}",
      "selectors/**/*.{js,jsx}",
      "stores/**/*.{js,jsx}",
      "utils/**/*.{js,jsx}"
    ],
    "coverageReporters": [
      "lcov",
      "text-summary"
    ],
    "moduleNameMapper": {
      "^.+\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "identity-obj-proxy",
      "^.+\\.(css|less|scss)$": "identity-obj-proxy",
      "^.*i18n.*\\.(json)$": "<rootDir>/tests/i18n_mock.json",
      "^bundle-loader\\?lazy\\!(.*)$": "$1"
    },
    "moduleDirectories": [
      "",
      "node_modules",
      "non_npm_dependencies"
    ],
    "reporters": [
      "default",
      "jest-junit"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!react-native|react-router)"
    ],
    "setupFiles": [
      "jest-canvas-mock"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/tests/setup.js",
    "testURL": "http://localhost:8065"
  },
  "jest-junit": {
    "output": "build/test-results.xml"
  },
  "scripts": {
    "check": "eslint --ignore-pattern node_modules --ignore-pattern non_npm_dependencies --ignore-pattern dist --ext .js --ext .jsx . --quiet",
    "fix": "eslint --ignore-pattern node_modules --ignore-pattern non_npm_dependencies --ignore-pattern dist --ext .js --ext .jsx . --quiet --fix",
    "build": "cross-env NODE_ENV=production webpack --display-error-details --verbose",
    "run": "webpack --progress --watch",
    "test": "jest --forceExit --detectOpenHandles",
    "stats": "cross-env NODE_ENV=production webpack --profile --json > webpack_stats.json",
    "updatesnapshot": "jest --updateSnapshot",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "cypress:run": "cypress run",
    "cypress:open": "cypress open"
  }
}
