    "marked": "github:mattermost/marked#ed33baecd7d7fa97d479ba22dde9d226b083d67d",
    "mattermost-redux": "github:mattermost/mattermost-redux#93a458f3adeedc4700db19b4eb59235801216a2a",
    "moment-timezone": "0.5.17",
    "pdfjs-dist": "2.0.489",
    "perfect-scrollbar": "0.8.1",
    "prop-types": "15.6.1",
    "react": "16.3.2",
    "react-addons-pure-render-mixin": "15.6.2",
    "react-bootstrap": "0.32.1",
    "react-color": "2.14.1",
    "react-contextmenu": "2.9.2",
    "react-custom-scrollbars": "4.2.1",
    "react-dom": "16.3.2",
    "react-intl": "2.4.0",
    "react-redux": "5.0.7",
    "react-router-dom": "4.2.2",
    "react-select": "1.2.1",
    "redux": "4.0.0",
    "redux-batched-actions": "0.3.0",
    "redux-persist": "4.9.1",
    "redux-persist-transform-filter": "0.0.16",
    "reselect": "3.0.1",
    "smoothscroll-polyfill": "0.4.3",
    "superagent": "3.8.3",
    "twemoji": "2.5.1",
    "url-search-params-polyfill": "4.0.0",
    "webrtc-adapter": "6.1.5",
    "whatwg-fetch": "2.0.4",
    "xregexp": "4.1.1"
  },
  "devDependencies": {
    "babel-cli": "6.26.0",
    "babel-core": "6.26.3",
    "babel-eslint": "8.2.3",
    "babel-jest": "22.4.3",
    "babel-loader": "7.1.4",
    "babel-plugin-dynamic-import-node": "1.2.0",
    "babel-plugin-module-resolver": "3.1.1",
    "babel-plugin-transform-runtime": "6.23.0",
    "babel-polyfill": "6.26.0",
    "babel-preset-env": "1.7.0",
    "babel-preset-es2015": "6.24.1",
    "babel-preset-react": "6.24.1",
    "babel-preset-stage-0": "6.24.1",
    "babel-runtime": "6.26.0",
    "bundle-loader": "0.5.6",
    "copy-webpack-plugin": "4.5.1",
    "cross-env": "5.1.5",
    "css-loader": "0.28.11",
    "enzyme": "3.3.0",
    "enzyme-adapter-react-16": "1.1.1",
    "enzyme-to-json": "3.3.3",
    "eslint": "4.19.1",
    "eslint-import-resolver-webpack": "0.9.0",
    "eslint-plugin-header": "^1.2.0",
    "eslint-plugin-import": "2.11.0",
    "eslint-plugin-react": "7.8.2",
    "exports-loader": "0.7.0",
    "file-loader": "1.1.11",
    "html-loader": "0.5.5",
    "html-webpack-plugin": "3.2.0",
    "identity-obj-proxy": "3.0.0",
    "image-webpack-loader": "3.6.0",
    "imports-loader": "0.8.0",
    "jest": "22.4.3",
    "jest-canvas-mock": "1.0.2",
    "jest-cli": "22.4.3",
    "jquery-deferred": "0.3.1",
    "mini-css-extract-plugin": "0.4.0",
    "nightwatch": "0.9.21",
    "node-sass": "4.9.0",
    "redux-mock-store": "1.5.1",
    "redux-persist-node-storage": "2.0.0",
    "remote-redux-devtools": "0.5.12",
    "sass-loader": "7.0.1",
    "selenium-standalone": "6.14.1",
    "style-loader": "0.21.0",
    "webpack": "4.8.3",
    "webpack-cli": "2.1.3",
    "webpack-node-externals": "1.7.2",
    "yup": "0.24.1"
  },
  "jest": {
    "snapshotSerializers": [
      "<rootDir>/node_modules/enzyme-to-json/serializer"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/non_npm_dependencies/"
    ],
    "clearMocks": true,
    "collectCoverageFrom": [
      "actions/**/*.{js,jsx}",
      "client/**/*.{js,jsx}",
      "components/**/*.jsx",
      "plugins/**/*.{js,jsx}",
      "reducers/**/*.{js,jsx}",
      "routes/**/*.{js,jsx}",
      "selectors/**/*.{js,jsx}",
      "stores/**/*.{js,jsx}",
      "utils/**/*.{js,jsx}"
    ],
    "coverageReporters": [
      "lcov",
      "text-summary"
    ],
    "moduleNameMapper": {
      "^.+\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "identity-obj-proxy",
      "^.+\\.(css|less|scss)$": "identity-obj-proxy",
      "^.*i18n.*\\.(json)$": "identity-obj-proxy",
      "^bundle-loader\\?lazy\\!(.*)$": "$1"
    },
    "moduleDirectories": [
      "",
      "node_modules",
      "non_npm_dependencies"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!react-native|react-router)"
    ],
    "setupFiles": [
      "jest-canvas-mock"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/tests/setup.js",
    "testURL": "http://localhost:8065"
  },
  "scripts": {
    "check": "eslint --ignore-pattern node_modules --ignore-pattern non_npm_dependencies --ignore-pattern dist --ext .js --ext .jsx . --quiet",
    "fix": "eslint --ignore-pattern node_modules --ignore-pattern non_npm_dependencies --ignore-pattern dist --ext .js --ext .jsx . --quiet --fix",
    "build": "cross-env NODE_ENV=production webpack --display-error-details --verbose --progress",
    "run": "cross-env NODE_ENV=production webpack --progress --watch",
    "run-fullmap": "webpack --progress --watch",
    "test": "jest --forceExit",
    "stats": "cross-env NODE_ENV=production webpack --profile --json > webpack_stats.json",
    "updatesnapshot": "jest --updateSnapshot",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "./tests/e2e/test.sh",
    "selenium-install": "selenium-standalone install --config=./tests/e2e/config.js",
    "selenium-start": "selenium-standalone start --config=./tests/e2e/config.js"
  }
}
